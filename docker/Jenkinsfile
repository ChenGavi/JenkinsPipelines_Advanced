pipeline {
  agent {
    docker {
      image 'executeautomation/jenkinsagent:latest'
    }

  }
  stages {
    stage('Verify') {
      parallel {
        stage('Docker Details') {
          steps {
            echo "Get the chromedriver path : ${SELENIUM}"
          }
        }

        stage('Build') {
          steps {
           
               sh 'dotnet build "$WORKSPACE/src/EAApp.csproj"'

          }
        }

      }
    }

    stage('Publish') {
      steps {

            sh 'dotnet publish EAApp.csproj -c Release -o /app/publish'
      }
    }

    stage('Post Build') {
      parallel {
        stage('Generate File') {
          steps {
            writeFile(file: 'deployed.txt', text: "deployed to ${VARIABLE}")
          }
        }

        stage('Archive file') {
          steps {
            archiveArtifacts(artifacts: 'deployed.txt', excludes: '*.log')
          }
        }

      }
    }

  }
  environment {
    SELENIUM = 'c:\\driver\\win'
    VARIABLE = ''
  }
}
