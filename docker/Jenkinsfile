pipeline {
  agent {
    docker {
      image 'executeautomation/jenkinsagent:agent'
    }

  }
  stages {
    stage('SCM') {
        steps {
		checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/FeynmanFan/JenkinsDocker']]])
	    }
    }
    stage('Build') {
          steps {
              sh 'dotnet restore "$WORKSPACE/src/EAApp.csproj" --force'
               sh 'dotnet build "$WORKSPACE/src/EAApp.csproj -c Release -o $WORKSPACE/src/app/build"'
          }
        }

    stage('Publish') {
          steps {
              sh 'dotnet restore "$WORKSPACE/src/EAApp.csproj -c Release -o $WORKSPACE/src/app/publish'
          }
        }
  }
  environment {
    SELENIUM = 'c:\\driver\\win'
    VARIABLE = ''
  }
}
