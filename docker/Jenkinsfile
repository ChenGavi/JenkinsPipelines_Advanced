pipeline {
  agent {
    docker {
      image 'executeautomation/jenkinsagent:agent'
    }

  }
stage('Docker Details') {
  steps {
    echo "Get the chromedriver path : ${SELENIUM}"
  }
}
stage('Build') {
  steps {         
       sh 'dotnet build "$WORKSPACE/src/EAApp.csproj"'
  }
}

    
stage('Publish') {
  steps {

        sh 'dotnet publish "$WORKSPACE/src/EAApp.csproj" -c Release -o /app/publish'
  }
}

  environment {
    SELENIUM = 'c:\\driver\\win'
    VARIABLE = ''
  }
}
